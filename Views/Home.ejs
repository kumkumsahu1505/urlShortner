<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col items-center p-6">

    <h1 class="text-3xl font-bold text-indigo-600 mb-6">URL Shortener</h1>

    <% if(locals.id) { %> 
        <p class="bg-green-100 text-green-800 px-4 py-2 rounded shadow mb-4">
            URL Generated: <span class="font-mono">localhost:3000/url/<%= id %></span>
        </p>
    <% } %>

    <div class="w-full max-w-md bg-white p-6 rounded-lg shadow-md mb-8">
        <form action="/url" method="POST" class="space-y-4">
            <label for="url" class="block text-gray-700 font-semibold">Enter your original URL:</label>
            <input type="text" name="url" id="url" placeholder="https://example.com"
                   class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded transition">
                Generate
            </button>
        </form>
    </div>

    <% if(locals.urls) { %>
    <div class="w-full overflow-x-auto">
        <table class="min-w-full bg-white rounded-lg shadow">
            <thead class="bg-indigo-600 text-white">
                <tr>
                    <th class="py-3 px-6 text-left">S.No</th>
                    <th class="py-3 px-6 text-left">ShortId</th>
                    <th class="py-3 px-6 text-left">Redirect</th>
                    <th class="py-3 px-6 text-left">Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr class="border-t hover:bg-gray-50">
                        <td class="py-2 px-6"><%= index + 1 %></td>
                        <td class="py-2 px-6 text-blue-600 font-mono"><%= url.shortId %></td>
                        <td class="py-2 px-6 text-sm break-words"><%= url.redirectUrl %></td>
                        <td class="py-2 px-6 text-center"><%= url.VisitHistory.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <% } %>

</body>
</html>
